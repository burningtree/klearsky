{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/@types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2017"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json",
    }
  ],
}
