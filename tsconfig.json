    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/@types/**/*.ts",
    "node_modules/vue-router/dist/vue-router.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "references": [
